

<div class = "container" style="background-image:url('https://lamitak.com/wp-content/uploads/2016/05/Tangerine_thumbnail-330x200.jpg')">
  <div class = "row">
    <div class="col-md-4">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-4">
      <h1>Eat-Da-Burger</h1>
      <img src="http://bestanimations.com/Food/FastFood/hamburger-animated-gif-2.gif" style="width:200px">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group"action="/" method="POST">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="burger_name" >
        </div>

        <button type="submit">Add burger</button>
      </form>

    </div>
    <div class="col-md-4">
        <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/if}}
          {{/each}}
        </ul>
    </div>

  </div>

</div>
